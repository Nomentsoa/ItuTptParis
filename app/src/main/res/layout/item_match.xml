<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="@dimen/main_margin"
        android:src="@drawable/icon_foot_match"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_nom_equipe1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipe1"
        android:textColor="@color/colorNoirx"
        android:textSize="@dimen/size_text_equipe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/main_margin"/>

    <TextView
        android:id="@+id/tv_vs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VS"
        android:textColor="@color/colorNoirx"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_nom_equipe1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/main_margin"/>

    <TextView
        android:id="@+id/tv_nom_equipe2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipe2"
        android:textColor="@color/colorNoirx"
        android:textSize="@dimen/size_text_equipe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_vs"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/main_margin"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="3dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipe 1"
                android:textSize="@dimen/size_text_titre_button"
                android:textColor="@color/colorNoirx"/>

            <Button
                android:id="@+id/btn_equipe1"
                android:layout_width="@dimen/width_heigth_button_match_list"
                android:layout_height="@dimen/width_heigth_button_match_list"
                android:textSize="@dimen/size_text_quote_button"
                android:text="3"
                android:textColor="@color/white"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="3dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipe 2"
                android:textSize="@dimen/size_text_titre_button"
                android:textColor="@color/colorNoirx"/>

            <Button
                android:id="@+id/btn_equipe2"
                android:layout_width="@dimen/width_heigth_button_match_list"
                android:layout_height="@dimen/width_heigth_button_match_list"
                android:textSize="@dimen/size_text_quote_button"
                android:text="3"
                android:textColor="@color/white"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="3dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Null"
                android:textSize="@dimen/size_text_titre_button"
                android:textColor="@color/colorNoirx"/>

            <Button
                android:id="@+id/btn_null"
                android:layout_width="@dimen/width_heigth_button_match_list"
                android:layout_height="@dimen/width_heigth_button_match_list"
                android:textSize="@dimen/size_text_quote_button"
                android:text="3"
                android:textColor="@color/white"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/ed_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="@dimen/main_margin"
        android:layout_marginRight="@dimen/main_margin"/>
</androidx.constraintlayout.widget.ConstraintLayout>